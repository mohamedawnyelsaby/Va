# ============================================
# VA TRAVEL - Environment Variables Template
# Copy this file to .env.local for development
# ============================================

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Va Travel"
NEXT_PUBLIC_APP_DESCRIPTION="Global Travel & Booking Platform"
NEXT_PUBLIC_SUPPORT_EMAIL=support@vatravel.com

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Development
DATABASE_URL="postgresql://postgres:password@localhost:5432/va_travel"

# Production (Railway will auto-generate)
# DATABASE_URL="${{Postgres.DATABASE_URL}}"

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-here-minimum-32-characters-random"

# Development
NEXTAUTH_URL=http://localhost:3000

# Production (Update with your Railway domain)
# NEXTAUTH_URL=https://your-app.up.railway.app

# ============================================
# GOOGLE OAUTH (Optional)
# ============================================
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================
# GOOGLE APIS
# ============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GOOGLE_PLACES_API_KEY="your-google-places-api-key"

# ============================================
# OPENAI (for AI features)
# ============================================
OPENAI_API_KEY="sk-your-openai-api-key"

# ============================================
# STRIPE (Payment Processing)
# ============================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# ============================================
# PI NETWORK
# ============================================
NEXT_PUBLIC_PI_APP_ID="your-pi-app-id"
PI_API_KEY="your-pi-api-key"
PI_SECRET_KEY="your-pi-secret-key"
NEXT_PUBLIC_PI_NETWORK_API_URL="https://api.minepi.com"

# ============================================
# REDIS (Optional - for caching)
# ============================================
REDIS_URL="redis://localhost:6379"
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# ============================================
# EMAIL SERVICE (Resend)
# ============================================
RESEND_API_KEY="re_your-resend-api-key"
EMAIL_FROM="Va Travel <noreply@vatravel.com>"

# ============================================
# CLOUDINARY (Image Upload & Storage)
# ============================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# ============================================
# ANALYTICS (Optional)
# ============================================
NEXT_PUBLIC_GA_TRACKING_ID="UA-XXXXXXXXX-X"
NEXT_PUBLIC_HOTJAR_ID="your-hotjar-id"
NEXT_PUBLIC_CRISP_WEBSITE_ID="your-crisp-website-id"

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_AI_RECOMMENDATIONS="true"
NEXT_PUBLIC_ENABLE_PI_PAYMENTS="false"
NEXT_PUBLIC_ENABLE_DARK_MODE="true"

# ============================================
# DEVELOPMENT
# ============================================
NODE_ENV="development"
DEBUG="va-travel:*"

# ============================================
# SECURITY
# ============================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-64-character-hex-encryption-key"
